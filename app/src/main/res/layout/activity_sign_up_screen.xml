<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg"
    tools:context=".Presentations.SignUpScreen.SignUpScreen">

    <TableRow
        android:layout_width="410dp"
        android:layout_height="20dp"
        android:layout_weight="1"
        android:layout_marginLeft="2dp"
        android:paddingHorizontal="20dp"
        >

        <TextView
            android:id="@+id/textView7"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="monospace"
            android:textColor="@color/gray"
            android:text="____________________" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:textColor="@color/main"
            android:textStyle="bold"
            android:textSize="35dp"
            android:fontFamily="monospace"
            android:layout_marginBottom="19dp"
            android:layout_marginRight="10dp"
            android:layout_height="match_parent"
            android:text="________"
            android:layout_marginTop="-2dp"
            />
    </TableRow>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set Up Your Profile."
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_marginLeft="20dp"/>
    <ImageButton
        android:id="@+id/editTags"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/add"
        android:layout_gravity="center"
        android:layout_marginTop="84dp"
        android:elevation="6dp"
        android:layout_marginLeft="39dp"
        android:contentDescription="Edit Profile"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_gravity="center"
        android:background="@drawable/circle"
        android:elevation="5dp"
        android:paddingLeft="12dp"
        android:layout_marginTop="-40dp"
        android:src="@drawable/user"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="343dp"
        android:layout_height="444dp"
        android:layout_gravity="center"
        android:layout_marginTop="-20dp"
        app:cardCornerRadius="50dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:hintAnimationEnabled="true"
            app:boxCornerRadiusTopEnd="40dp"
            app:boxCornerRadiusBottomStart="40dp"
            app:boxCornerRadiusTopStart="40dp"
            app:boxCornerRadiusBottomEnd="40dp"
            app:hintTextColor="@color/main"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="  Name"
                android:id="@+id/username"
                android:layout_marginVertical="10dp"
                android:drawableStart="@drawable/baseline_account_circle_24"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxCornerRadiusTopEnd="40dp"
                app:boxCornerRadiusBottomStart="40dp"
                app:boxCornerRadiusTopStart="40dp"
                app:boxCornerRadiusBottomEnd="40dp"
                app:hintTextColor="@color/main"
                app:hintAnimationEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="  Email"
                    android:id="@+id/useremail"
                    android:inputType="textEmailAddress"
                    android:drawableStart="@drawable/baseline_alternate_email_24"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintTextColor="@color/main"
                    app:hintAnimationEnabled="true"
                    app:passwordToggleEnabled="true"
                    app:boxCornerRadiusTopEnd="40dp"
                    android:layout_marginVertical="10dp"
                    app:boxCornerRadiusBottomStart="40dp"
                    app:boxCornerRadiusTopStart="40dp"
                    app:boxCornerRadiusBottomEnd="40dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="  Password"
                        android:id="@+id/password"
                        android:drawableStart="@drawable/baseline_lock_24"
                        />
                    <Button
                        android:id="@+id/sign_up_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="100dp"
                        android:shadowColor="@color/main"
                        android:text="SIGN UP"
                        android:textStyle="bold"
                        android:backgroundTint="@color/main"/>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="53dp"
                            android:layout_marginTop="5dp"
                            android:text="Already have an account? "
                            android:textAlignment="center"
                            android:textColor="@color/gray"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/LoginScreenbtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="@string/Sig"
                            android:textAlignment="center"
                            android:textColor="@color/main"
                            android:textSize="15dp" />

                    </TableRow>

                </com.google.android.material.textfield.TextInputLayout>
            </com.google.android.material.textfield.TextInputLayout>
        </com.google.android.material.textfield.TextInputLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>